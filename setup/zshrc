PROMPT=$'%{\e[1;32m%}%n %{\e[1;36m%}{%?} %{\e[1;37m%}%~'

if [[ $EUID == 0 ]] 
then
PROMPT+=$' #%{\e[0m%} ' # user dir %
else
PROMPT+=$' %#%{\e[0m%} ' # root dir #
fi

# Make ^Z toggle between ^Z and fg
function ctrlz() {
    if [[ $#BUFFER == 0 ]]; then
        fg >/dev/null 2>&1 && zle redisplay
    else
        zle push-input
    fi
}

zle -N ctrlz
bindkey '^Z' ctrlz

