ccd() { cd && ls}

# —Å–æ–∑–¥–∞—Ç—å –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é –∏ –ø–µ—Ä–µ–π—Ç–∏ –≤ –Ω–µ–µ 
mcd(){ mkdir -p $1; cd $1 }

# –µ—Å–ª–∏ —Ç–µ–∫—É—â–∞—è –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è –ø—É—Å—Ç–∞—è, —Ç–æ —É–¥–∞–ª–∏—Ç—å –µ–µ –∏ –ø–µ—Ä–µ–π—Ç–∏ –≤ —Ä–æ–¥–∏—Ç–µ–ª—å—Å–∫—É—é –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é 
rcd(){ local P="`pwd`"; cd .. && rmdir "$P" || cd "$P"; }

# –±—ã—Å—Ç—Ä–æ–µ –ø–µ—Ä–µ–∏–º–µ–Ω–æ–≤–∞–Ω–∏–µ 
name() {
    name=$1
    vared -c -p 'rename to: ' name
    command mv $1 $name
}

# —Ä–∞—Å–ø–∞–∫–æ–≤–∫–∞ –∞—Ä—Ö–∏–≤–∞ 
extract () {
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xjf "$1"        ;;
            *.tar.gz)    tar xzf "$1"     ;;
            *.bz2)       bunzip2 "$1"       ;;
            *.rar)       unrar x "$1"     ;;
            *.gz)        gunzip "$1"     ;;
            *.tar)       tar xf "$1"        ;;
            *.tbz2)      tar xjf "$1"      ;;
            *.tgz)       tar xzf "$1"       ;;
            *.zip)       unzip "$1"     ;;
            *.Z)         uncompress "$1"  ;;
            *.7z)        7z x "$1"    ;;
            *)           echo "—è –Ω–µ –≤ –∫—É—Ä—Å–µ –∫–∞–∫ —Ä–∞—Å–ø–∞–∫–æ–≤–∞—Ç—å '$1'..." ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

# —É–ø–∞–∫–æ–≤–∫–∞ –≤ –∞—Ä—Ö–∏–≤ 
pk () {
    if [ $1 ] ; then
        case $1 in
            tbz)   	tar cjvf "$2".tar.bz2 "$2"      ;;
            tgz)   	tar czvf "$2".tar.gz  "$2"   	;;
            tar)  	tar cpvf "$2".tar  "$2"       ;;
			bz2)	bzip "$2" ;;
            gz)		gzip -c -9 -n "$2" > "$2".gz ;;
			zip)   	zip -r "$2".zip "$2"   ;;
            7z)    	7z a "$2".7z "$2"    ;;
            *)     	echo "'$1' cannot be packed via pk()" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

# mp3 –≤ –Ω–æ—Ä–º–∞–ª—å–Ω—É—é –∫–æ–¥–∏—Ä–æ–≤–∫—É 
mp32utf() { find -iname '*.mp3' -print0 | xargs -0 mid3iconv -eCP1251 --remove-v1 }

# top –ø–æ –∏–º–µ–Ω–∏ –ø—Ä–æ—Ü–µ—Å—Å–∞, –ø—Ä–∞–≤–¥–∞ —Ç–æ–ª—å–∫–æ –ø–æ –ø–æ–ª–Ω–æ–º—É 
pidtop() {top -p `pidof $@ | tr ' ' ','`}

# –ø—Ä–æ—Å—Ç–æ–π –∫–∞–ª—å–∫—É–ª—è—Ç–æ—Ä 
calc() {echo "${1}"|bc -l;}

# –º–æ–π –∞–π–ø–∏—à–Ω–∏–∫ 
myip() {lynx --source http://www.formyip.com/ |grep The | awk {'print $5'}}

# –≤–µ–ª–∏–∫–∏–π —Ä–∞–Ω–¥–æ–º –¥–ª—è –ø–µ—Ä–µ–º–µ—à–∏–≤–∞–Ω–∏—è —Å—Ç—Ä–æ–∫ –≤ —Ñ–∞–π–ª–µ 
rand() { awk '{print rand()"\t"$0}'|sort|awk -F'\t' '{print $2}'  }

